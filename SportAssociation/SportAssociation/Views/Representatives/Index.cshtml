@model IEnumerable<SportAssociation.Models.Representative>

@{
    ViewData["Title"] = "Index";
}

@if (TempData["alertMessage"] != null)
{
    <script type="text/javascript">
        alert('@TempData["alertMessage"]');
    </script>
}

<h1>Welcome Club Representative</h1>

<div class="row">
    <div class="col-md-4">
        <hr>
        <button class="w-100 btn btn-lg btn-primary" onclick="location.href='@Url.Action("viewAllInformation", "Representatives")'">View club information</button>
        <hr>
        <button class="w-100 btn btn-lg btn-primary" onclick="location.href='@Url.Action("viewUpcomingMatches", "Representatives")'">View All upcoming matches</button>
        <hr>
        <button class="w-100 btn btn-lg btn-primary" onclick="location.href='@Url.Action("viewAvailableStadiums", "Representatives")'">View all available stadiums</button>
    </div>
</div>