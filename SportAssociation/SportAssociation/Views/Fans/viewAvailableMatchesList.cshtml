@model System.Data.DataTable
@using System.Data;

<h4>Available Matches on @ViewBag.date</h4>

<table class="table">
    <thead>
        <tr>
            @foreach (DataColumn col in Model.Columns)
            {
                <th>@col.ColumnName</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (DataRow row in Model.Rows)
        {
            <tr>
                @foreach (DataColumn col in Model.Columns)
                {
                    <td>@row[col.ColumnName]</td>
                }
                <td>
                <button class="w-20 btn btn-primary" onclick="location.href='@Url.Action("PurchaseTicket", "Fans", new {HostClub = row[Model.Columns[0].ColumnName], GuestClub = row[Model.Columns[1].ColumnName]})'">Purchase Ticket</button>
                </td>
            </tr>
        }
    </tbody>
</table>
