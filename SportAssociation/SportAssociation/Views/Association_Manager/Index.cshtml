@model IEnumerable<SportAssociation.Models.Association_Manager>

@{
    ViewData["Title"] = "Index";
}

@if (TempData["alertMessage"] != null)
{
    <script type="text/javascript">
        alert('@TempData["alertMessage"]');
    </script>
}

<h1>Welcome Sports Association Manager</h1>

<div class="row">
    <div class="col-md-4">
        <hr>
        <a href="/matches"
            <button class="w-100 btn btn-lg btn-primary">Manage Match</button>
        </a>
        <hr>
        <button class="w-100 btn btn-lg btn-primary" onclick="location.href='@Url.Action("ViewAllUpcomingMatches", "Association_Manager")'">View All upcoming matches</button>
        <hr>
        <button class="w-100 btn btn-lg btn-primary" onclick="location.href='@Url.Action("ViewAlreadyPlayedMatches", "Association_Manager")'">View already played matches</button>
        <hr>
        <button class="w-100 btn btn-lg btn-primary" onclick="location.href='@Url.Action("neverMatched", "Association_Manager")'">View pair of clubs never matched</button>
    </div>
</div>
